<p id="notice"><%= notice %></p>
 
<p>
  <b><%= t(".Name") %>:</b>
  <%= @post.name %>
</p>
 
<p>
  <b><%= t(".Title") %>:</b>
  <%= @post.title %>
</p>
 
<p>
  <b><%= t(".Content") %>:</b>
  <%= @post.content %>
</p>

 <p>Tags: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
 
 <div class="thumb">
	 <p>
	     <b><%= t(".Pictures") %>:</b>
  
	 </p>
 <% for asset in @post.assets %>

<%= link_to image_tag(asset.asset.url(:thumb)), asset.asset.url(:original), :class => 'lightview'%>

 <% end %>
 
</div>

<% if can? :read, @comment %>
<h2><%= t(".Comments") %></h2>
<%= render @post.comments %>
<% end %>

<% if can? :create, @comment %>
<h3><%= t(".Add a comment") %></h3>
<%= render "comments/form" %>
<% end %>

<% if can? :update, @post %>
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<% end %>

<%= link_to 'Back to Posts', posts_path %>