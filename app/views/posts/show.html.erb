<p id="notice"><%= notice %></p>
 
<p>
  <b>Name:</b>
  <%= @post.name %>
</p>
 
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>
 
<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

 <p>Tags: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
 
 <div class="thumb">
	 <p>
	     <b>Pictures:</b>
  
	 </p>
 <% for asset in @post.assets %>

<%= link_to image_tag(asset.asset.url(:thumb)), asset.asset.url(:original), :class => 'lightview'%>
 <% end %>
 
</div>

<h2>Comments</h2>
<%= render @post.comments %>
<% if can? :create, @comment %>
<h2>Add a comment:</h2>
<%= render "comments/form" %>
<% end %>
<% if can? :update, @post %>
<%= link_to 'Edit Post', edit_post_path(@post) %> 
<% end %>|
<%= link_to 'Back to Posts', posts_path %> |